{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "<APP_INSIGHTS_CONNECTION>"
  },
  "ConnectionStrings": {
    "DeliveryDb": "<DB_CONNECTION>",
    "OrderServiceBus": "<SB_CONNECTION>"
  },
  "ApiServices": {
    "OrderService": {
      "BaseUrl": "<ORDER_SERVICE_BASE_URL>",
      "ClientId": "<CLIENT_ID>",
      "Scopes": "api://<CLIENT_ID>/.default"
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<TENANT_ID>",
    "ClientId": "<CLIENT_ID>",
    "ClientSecret": "<CLIENT_SECRET>"
    //"Audience": "api://<CLIENT_ID>"
  },
  "SwaggerClient": {
    "ClientId": "<CLIENT_ID>",
    "Scopes": "api://<CLIENT_ID>/access_as_user",
    "TokenUrl": "https://login.microsoftonline.com/{0}/oauth2/v2.0/token",
    "AuthorizeUrl": "https://login.microsoftonline.com/{0}/oauth2/v2.0/authorize"
  }
}
